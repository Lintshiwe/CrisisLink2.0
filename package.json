{
    "name": "crisislink",
    "version": "1.0.0",
    "description": "One-Tap Disaster Rescue System - Mobile-first emergency response platform",
    "main": "index.js",
    "scripts": {
        "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
        "dev:backend": "cd backend && npm run dev",
        "dev:frontend": "cd frontend && npm start",
        "build": "cd frontend && npm run build",
        "start": "cd backend && npm start",
        "test": "npm run test:backend && npm run test:frontend",
        "test:backend": "cd backend && npm test",
        "test:frontend": "cd frontend && npm test",
        "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install"
    },
    "keywords": [
        "emergency",
        "disaster-response",
        "sos",
        "rescue",
        "south-africa",
        "weather-alerts",
        "mobile-first"
    ],
    "author": "CrisisLink Team",
    "license": "MIT",
    "devDependencies": {
        "concurrently": "^8.2.2",
        "eslint": "^9.37.0"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=8.0.0"
    },
    "directories": {
        "doc": "docs",
        "test": "tests"
    },
    "type": "commonjs",
    "dependencies": {
        "axios": "^1.12.2"
    }
}
