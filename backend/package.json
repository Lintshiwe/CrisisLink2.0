{
    "name": "crisislink-backend",
    "version": "1.0.0",
    "description": "CrisisLink Backend - Emergency response system API",
    "main": "src/server.js",
    "scripts": {
        "start": "node src/server.js",
        "dev": "nodemon src/server.js",
        "test": "jest --verbose --detectOpenHandles",
        "test:watch": "jest --watch --verbose",
        "test:coverage": "jest --coverage --verbose",
        "lint": "eslint src/",
        "lint:fix": "eslint src/ --fix"
    },
    "dependencies": {
        "axios": "^1.6.2",
        "bcrypt": "^5.1.1",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-rate-limit": "^7.1.5",
        "express-slow-down": "^2.0.1",
        "express-validator": "^7.0.1",
        "firebase-admin": "^11.11.1",
        "helmet": "^7.1.0",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^8.19.1",
        "morgan": "^1.10.0",
        "node-cron": "^3.0.3",
        "pg": "^8.11.3",
        "sequelize": "^6.35.2",
        "socket.io": "^4.7.4",
        "sqlite3": "^5.1.7",
        "twilio": "^4.19.0",
        "winston": "^3.11.0"
    },
    "devDependencies": {
        "@jest/globals": "^30.2.0",
        "eslint": "^8.56.0",
        "jest": "^29.7.0",
        "nodemon": "^3.0.2",
        "prettier": "^3.1.1",
        "supertest": "^6.3.4"
    },
    "keywords": [
        "emergency",
        "api",
        "sos",
        "disaster-response"
    ],
    "author": "CrisisLink Team",
    "license": "MIT",
    "jest": {
        "testEnvironment": "node",
        "testMatch": [
            "**/tests/**/*.test.js"
        ],
        "collectCoverageFrom": [
            "src/**/*.js",
            "!src/server.js",
            "!src/database/db.js"
        ],
        "coverageReporters": [
            "text",
            "lcov",
            "html"
        ],
        "setupFilesAfterEnv": [
            "<rootDir>/tests/setup.js"
        ]
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=8.0.0"
    }
}
